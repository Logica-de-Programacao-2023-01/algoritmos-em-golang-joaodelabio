seleçao7

package main

import "fmt"

func main() {
	var salario float64

	fmt.Print("escreva o salário do funcionário: ")
	fmt.Scanln(&salario)

	var novoSalario float64

	if salario < 1000.0 {
		novoSalario = salario * 1.1 // Aumento de 10%
	} else {
		novoSalario = salario * 1.05 // Aumento de 5%
	}

	fmt.Printf("O novo salário do funcionário é R$ %.2f\n", novoSalario)
}
